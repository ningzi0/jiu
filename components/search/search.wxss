/* components/search/search.wxss */
.searchInput{
  background-color: #fff;
  padding: 15rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}
.searchInput image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  transform: translate(0,-50%);
}
.searchInputContent{
  background-color: #f1f1f1;
  padding: 15rpx 20rpx 15rpx 30rpx;
  border-radius: 0rpx;
  width: 81%;
  display: inline-block;
  vertical-align: middle;
}
.searchInputContent input{
  padding-left: 50rpx;
  font-size: 28rpx;
}




/* 模态框  */
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}



