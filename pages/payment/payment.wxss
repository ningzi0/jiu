/* pages/payment/payment.wxss */
page{
  font-weight: normal;
}
.payment{
  margin-bottom: 170rpx;
}
.p_top{
  background: #fff;
  margin: 20rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  position: relative;
}
.p_top .h3{
  color: #313131;
}
.p_top .span{
  font-size: 26rpx;
  color: #8b8b8b;
  margin-top: 10rpx;
}
.prolist{
  background: #fff;
  margin: 20rpx;
  position: relative;
  padding-top: 50rpx;
}
.top_tags{
  background-color: #fdf0e8;
  color: #e76f4a;
  position: absolute;
  top: 0;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  right: 0;
  border-radius: 0 0 0 20rpx;
}
.youhui text{
  font-size: 24rpx;
  border: 1px solid #f9c3b9;
  color: #e76f4a;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
}
.prolist .ul{
  border-bottom: 1px dashed #eee;
}
.tips{
  font-size: 24rpx;
  padding: 20rpx;
  color: #999;
}

.should{
  text-align: right;
  padding: 0 20rpx 20rpx;
  font-size: 28rpx;
  color: #888;
}
.should text{
  font-size: 40rpx;
  color: #222;
  font-weight: bold;
}

.pay_method{
  display: flex;
  align-items: center;
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
}
.pay_method:active{
  background-color: #fafafa;
}
.pay_method image{
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
}
.pay_method text{
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
}
.pay_method_item{
  flex: 1;
}
.pay_method_right{
  text-align: right;
}
.pay_method_radio{
  flex: 2;
}
.pay_method_radio label{
  margin-left: 20rpx;
}
.weui-cell__hd,.weui-cell__bd{
  display: inline-block;
  vertical-align: middle;
}
.weui-cell__bd{
  font-size: 26rpx;
}
.pay_method_right input{
  border: 1px solid #eee;
  padding: 10rpx 0;
}
.footer{
  position: fixed;
  width: 100%;
  bottom: 0;
  background-color: #fff;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.1);
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.f_price{
  font-size: 26rpx;
}
.f_price text{
  font-size: 36rpx;
  font-weight: bold;
}
.f_youhui{
  color: #e76f4a;
  font-size: 24rpx;
  margin: 10rpx 0;
}
.footer .f_item{
  flex: 1;
}
.footer .f_item button{
  background-color: #f95731;
  color: #fff;
  border-radius: 200rpx;
}
.footer .f_item button:active{
  opacity: 0.85;
}
.modal-title{
  border-bottom: 1px solid #eee;
  padding: 30rpx 0;
}
.modal-content{
  padding: 10rpx 20rpx;
}
.pay_modal_item{
  padding: 20rpx 0;
}
.pay_modal_item image{
  width: 70rpx;
  height: 70rpx;
  display: inline-block;
  vertical-align: middle;
}
.pay_modal_item .text{
  display: inline-block;
  vertical-align: middle;
  width: 70%;
}
.pay_modal_item .text .tags{
  background-color: #e76f4a;
  color: #fff;
  padding: 5rpx 20rpx;
  font-size: 26rpx;
}
.yuyue_time{
  text-align: right;
  padding: 0 50rpx;
}

.youhuiInfo{
  display: flex;
  padding: 20rpx;
  font-size: 29rpx;
  border-bottom: 1px dashed #eee;
}
.youhuiInfo .y_item{
  flex: 1;
}
.youhuiInfo .y_right{
  text-align: right;
}
.youhuiInfo .y_right navigator{
  color: #f95731;
}

.modify{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translate(0,-50%);
}
.modify image{
  width: 100%;
  height: 100%;
}


/* 超值换购 */

.exchangeTitle{
  font-size: 30rpx;
  padding: 20rpx;
}
.exchangeTitle .h3{
  display: inline-block;
}
.exchangeTitle text{
  color: #e76f4a;
  font-size: 27rpx;
  margin-left: 15rpx;
}
.Exchange{
  border-bottom: 1px dashed #eee;
  border-top: 1px dashed #eee;
}
.exchangeContent{
  width: 100%;
  overflow-x: auto;
}
.exchangeContent .ul{
  display: flex;
  padding:0 20rpx 20rpx;
  border: 0;
}
.exchangeContent .ul .li {
  border: 1px solid #eee;
  flex: 1;
  display: block;
  margin: 5rpx;
}

.exchangeContent .ul .li image{
  width: 100%;
  display: block;
  height: 200rpx;
  border-radius: 0;
}
.exchangeContent .ul .li .h3{
  display: block;
  width: 98%;
  font-size: 28rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  margin: 15rpx 0;
  color: #686d73;
  font-weight: bold;
}
.exchangeContent .ul .li .number{
  font-size: 22rpx;
  color: #e76f4a;
}
.exchangeContent .ul .li .price{
  display: flex;
  font-size: 29rpx;
  font-weight: bold;
  margin-top: 20rpx;
  letter-spacing: -2.5rpx;
}
.exchangeContent .ul .li .price .now{
  font-size: 29rpx;
}
.exchangeContent .ul .li .price .del{
  color: #999;
  text-decoration: line-through;
}

.p_price_num_item{
  margin:15rpx 0;
}
.p_price_num_item button.buy-num-btn{
  border: 0;
}

