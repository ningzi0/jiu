/* pages/share/share.wxss */
page{
  background-color: #fff;
}
.erweima{
  width: 500rpx;
  height: 500rpx;
  margin: 100rpx auto 0;
  border: 1px solid #eee;
  padding: 30rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 0 30rpx rgba(0,0,0,0.1);
}
.erweima image{
  width: 100%;
  height: 100%;
}
.share button{
  background-color: #ffe726;
  width: 500rpx !important;
  margin: 70rpx auto;
  font-weight: 500;
  font-size: 29rpx;
  border-radius: 200rpx;
  padding: 30rpx 0;
  color: #000;
}
.share button:active{
  background: #d6bf0c;
}
.content{
  width: 600rpx;
  margin: 0 auto;
  font-size: 29rpx;
  line-height: 1.75;
}


.Commission_details{
  display: block;
  text-align: center;
  margin: 30rpx auto;
  padding: 30rpx 0;
  background-color: #ffe726;
  width: 50%;
  border-radius: 200rpx;
}


.share_list{
  border: 1px solid #eee;
  margin: 100rpx;
}
.share-item{
  margin: 10rpx;
  display: flex;
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  align-items: center;
}
.share-item:last-child{
  border: 0;
}
.share-item image{
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #eee;
  border-radius: 50%;
  display:block;
  display: inline-block;
  
}
.share-item  .text{
  flex: 1;
}
.share-item  text{
  display: inline-block;
  flex: 1;
  text-align: left;

}

.num{
  text-align: center;
  margin-top: 20rpx;
}


