.welfareItem{
  background: #fff;
  margin: 15rpx;
  padding: 40rpx;
  border-radius: 15rpx;
  box-shadow: 0 0 10rpx rgba(0,0,0,0.1);
}
.welfareItem .h3{
  font-size: 36rpx;
  font-weight: bold;
}
.welfareCon{
  display: flex;
  padding: 15rpx 0;
  align-items: center;
  border-bottom: 1px dashed #e5e5e5;
}
.welfareCon .welfareLeft,.welfareCon .welfareRight{
  flex: 1;
}
.welfareCon .welfareLeft{
  color: #da7036;
  font-size: 29rpx;
}
.welfareRight{
  text-align: right;
  font-size: 50rpx;
  font-weight: bold;
  color: #0329a6;
}
.welfareRight text{
  font-size: 29rpx;
  font-weight: 500;
}
.welfareBtn{
  padding: 15rpx 0;
  display: flex;
  align-items: center;
  font-size: 29rpx;
}
.welfareBtn .guize{
  flex: 1;
}
.welfareBtn .Btn{
  text-align: right;
  flex: 1;
}
.welfareBtn .Btn navigator{
  background: #0128a9;
  color: #fff;
  display: inline-block;
  padding: 10rpx 40rpx;
  border-radius: 100rpx;
}
.guizeContent{
  font-size: 29rpx;
}
.guizeContent .p{
  margin: 10rpx 0;
}






