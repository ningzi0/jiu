/* pages/Collection/Collection.wxss */
.table{
  background-color: #fff;
  padding: 30rpx;
}
.collectionContent {
  margin: 20rpx 0;
  padding: 15rpx;
  background-color: #fff;
}
.collectionContent .c_c_item .pic{
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
  border: 1px solid #eee;
  display: inline-block;
  vertical-align: top;
}
.collectionContent .c_c_item .pic image{
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 10rpx;
}
.c_c_right{
  width: 495rpx;
  display: inline-block;
  padding: 0 0 0 30rpx;
  box-sizing: border-box;
}
.c_c_right .name{
  font-size: 29rpx;
  font-weight: bold;
}
.c_c_right .p{
  font-size: 27rpx;
  color: #999;
  padding: 15rpx 0;
}
.c_c_right .price{
  font-size: 28rpx;
  color: #f00;
}
.c_c_right .price text{
  font-size: 34rpx;
  font-weight: bold;
}
.c_c_item{
  position: relative;
  margin-bottom: 20rpx;
}
.closeBtn{
  position: absolute;
  font-size: 28rpx;
  right: 20rpx;
  border: 1px solid #eee;
  padding: 5rpx 20rpx;
  border-radius: 200rpx;
  bottom: 25rpx;
}











