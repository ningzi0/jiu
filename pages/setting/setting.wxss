/* pages/setting/setting.wxss */
.s_content{
  background-color: #fff;
  margin: 20rpx;
  border-radius: 10rpx;
}
.s_content .ul .li{
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.s_content .ul .li .img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 1px solid #eee;
  padding: 10rpx;
  display: inline-block;
  vertical-align: middle;
}
.edit-righr-bar{
  text-align: right;
}
.s_content .ul .li .img image{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-radius: 50%;
}
.set_item{
  flex: 1;
}
.right_arr{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
.set_item .input{
  display: inline-block;
  vertical-align: middle;
  width: 85%;
}
.birthday{
  color: #242fa5;
}
.set_item .input navigator{
  height: 40rpx;
}