/* pages/return/return.wxss */
.returnTop{
  background: linear-gradient(to right,#ff9003,#fe5303);
  padding: 30rpx;
}
.returnT_Con{
  background-color: #fff;
  padding:50rpx;
  border-radius: 20rpx;
}
.returnT_Title{
  font-weight: bold;
  font-size: 40rpx;
  color: #343434;
  margin-bottom: 10rpx;
}
.returnT_Time{
  color: #979797;
  font-size: 26rpx;
}

.return_money{
  display: flex;
  align-items: center;
  background-color: #fff;
  margin: 20rpx 0;
  padding: 30rpx;
  color: #fe5303;
  font-weight: bold;
}
.return_m_left,.return_m_right{
  flex: 1;
}
.return_m_left image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
.return_m_left text{
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
}

.return_m_right{
  text-align: right;
}
.return_info{
  background-color: #fff;
  padding: 30rpx;
}
.return_info_title{
  font-weight: bold;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.return_info_pro .img{
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
  vertical-align: top;
}
.return_info_pro .img image{
  width: 100%;
  height: 100%;
}
.return_info_proText{
  display: inline-block;
  width: 70%;
  padding-left: 15rpx;
  box-sizing: border-box;
}
.return_info_proT_title{
  font-weight: bold;
}
.return_item{
  font-size: 29rpx;
  color: #999;
  margin: 15rpx 0;
}
.return_info_item{
  margin: 30rpx 0;
  font-size: 28rpx;
}
.return_info_item .left{
  margin-right: 70rpx;
  color: #999;
}
.tel{
  background-color: #fff;
  text-align: center;
  padding: 30rpx ;
  border-top: 1px solid #eee;
}
.tel image{
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
}
.tel text{
  display: inline-block;
  vertical-align: middle;
  font-size: 30rpx;
}

.return_info_item .pic{
  display: inline-block;
  vertical-align: middle;
}
.return_info_item image{
  width: 140rpx;
  height: 140rpx;
  border: 1px solid #eee;
  margin-right: 10rpx;
  padding: 10rpx;
}