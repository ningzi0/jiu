/* ------------------------------------------------ */
page{
  font-weight: normal;
}
.available{
  background-color: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.title{
  font-size: 30rpx;
  font-weight: bold;
  background-color: #fffcf7;
  padding: 30rpx 40rpx;
}

.available .ul .li{
  padding:50rpx 30rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}
.available .ul .li .tags{
  font-size: 26rpx;
  background: linear-gradient(#6fc3f1,#4a9ffa);
  display: inline-block;
  color: #fff;
  padding: 7rpx 10rpx;
  border-radius: 10rpx;
  vertical-align: middle;
}
.available .ul .li .addName{
  display: inline-block;
  font-weight: bold;
  margin-left: 20rpx;
  font-size: 34rpx;
  text-indent: -204rpx;
  overflow: hidden;
  /* white-space: nowrap;
  text-overflow: ellipsis; */
  width: 85%;
  vertical-align: middle;
}
.info{
  font-size: 29rpx;
  color: #999;
  padding: 15rpx 0 0;
}
.available .ul .li .left{
  width: 80%;
}
.button{
  position:absolute;
  right: 30rpx;
  bottom: 30rpx;
}
.button button{
  width: 45rpx;
  height: 45rpx;
  padding: 0;
  background-color: #fff;
  display: inline-block;
  margin: 0 15rpx;
}
.button image{
  width: 100%;
  height: 100%;
}
.notavailable,.info{
  color: rgb(211, 211, 211);
}
.notavailable .ul .li .tags{
  background: rgb(211, 211, 211);
}

.address{
  margin-bottom: 125rpx;
}